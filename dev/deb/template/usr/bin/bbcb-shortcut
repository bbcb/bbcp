#!/bin/sh

standardDir="/usr/lib/blackbox"
useDir="$HOME/blackbox"

# fix Ubuntu-specific problems:
unset UBUNTU_MENUPROXY
unset GTK_MODULES
export LIBOVERLAY_SCROLLBAR=0

mkdir -p $useDir

# export LD_DEBUG=all
env \
	BB_STANDARD_DIR="${standardDir}" BB_USE_DIR="${useDir}" \
	"${standardDir}"/blackbox
